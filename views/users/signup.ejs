<% layout("/layouts/bolierplate") %>

    <div class="row mt-3 mb-5">
        <h1 class="col-6 offset-3">SignUp on explorejurney</h1>
        <div class="col-8 offset-3">

            <form action="/users/signup" method="post" novalidate class="needs-validation">
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <div class="input-group">
                        <i class="fa-regular fa-user input-group-text"></i>
                        <input name="username" type="text" class="form-control" autofocus required id="username" />
                        <i class="fa-regular fa-circle-check input-group-text"></i>
                    </div>
                    <div class="valid-feedback"> looks good !</div>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <div class="input-group">
                        
                     <i class="fa-regular fa-envelope input-group-text"></i>
                    <input name="email" type="email" class="form-control" required id="email" />
                    <i class="fa-regular fa-circle-check input-group-text"></i>
                       
                    </div>
                    
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <div class="input-group">
                        <i class="fa-solid fa-key input-group-text"></i>
                        <input name="password" type="password" class="form-control" required id="password" />
                        <i class="fa-regular fa-circle-check input-group-text"></i>

                    </div>
                 
                    <div class="valid-feedback"> looks good !</div>
                </div>
                <button class="btn btn-success">SignUp</button>
            </form>
        </div>
    </div>