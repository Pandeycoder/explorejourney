<% layout("/layouts/bolierplate") %>

    <div class="row mt-3 mb-5">
        <h1 class="col-6 offset-3">SignUp on explorejurney</h1>
        <div class="col-8 offset-3">

            <form action="/users/signup" method="post" novalidate class="needs-validation">
                <div class="mb-3">
                    <label for="username" class="form-label">Name</label>
                    <div class="input-group user-input-border">
                        <i class="fa-regular fa-user input-group-text"></i>
                        <input name="username" type="text" placeholder="enter your name" class="form-control user-input" required id="username" autofocus />
                        <i class="fa-regular fa-circle-check input-group-text"></i>
                    </div>
                    <div class="valid-feedback"> looks good !</div>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <div class="input-group user-input-border">
                        
                     <i class="fa-regular fa-envelope input-group-text"></i>
                    <input name="email" type="email" class="form-control user-input" placeholder="Email" required id="email" />
                    <i class="fa-regular fa-circle-check input-group-text"></i>
                       
                    </div>
                    
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Mobile Number</label>
                    <div class="input-group user-input-border">

                        <select name="" id="" class="input-group-text">
                            <option value="">Code</option>
                            <option value="">+91</option>

                            <option value="">+61</option>
                            <option value="">+1</option>
                        </select>
                        
                     
                    <input name="number" type="tel" class="form-control user-input" placeholder="Mobile Number" required id="nummber" />
                    <i class="fa-regular fa-circle-check input-group-text"></i>
                       
                    </div>
                    
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label ">Password</label>
                    <div class="input-group user-input-border">
                        <i class="fa-solid fa-key input-group-text"></i>
                        <input name="password" type="password" class="form-control user-input"
                        placeholder="password" required id="password" />
                        <i class="fa-regular fa-circle-check input-group-text"></i>

                    </div>
                 
                    <div class="valid-feedback"> looks good !</div>
                </div>
                <button class="btn btn-success">SignUp</button>
            </form>
            <div class="mt-3">
                If you already have an account <a href="/users/login" style="color:red" class="mx-2"><b>Login Here</b></a> 

            </div>
           
        </div>
    </div>