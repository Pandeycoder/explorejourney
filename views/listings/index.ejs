            color: white !important;
            background-color: #0ef;
        }
        .send-msg {

            opacity: 0;
            animation: slideTop 1s ease forwards;
            animation-delay: 3s;
        }
        .contact-heading {
            opacity: 0;
            animation: slideButtom2 1s ease forwards;
            animation-delay: 1s;

        }
        .contact-input {
            opacity: 0;
            animation: slideButtom1 1s ease forwards;
            animation-delay: 2s;
            color: #081b29;
            border-radius: 10px;
        }
        .contact-input {
            opacity: 0
        }


        /* /================= animation section ends here ================/
        /================= responsive section starts here ================/ */

        @keyframes slideButtom1 {

0% {
    transform: translateX(-100px);
    opacity: 0;
}

100% {
    transform: translateY(0px);
    opacity: 0.5;
}
}

@keyframes slideTop {

0% {
    transform: translateY(-100px);
    opacity: 0;
}

100% {
    transform: translateX(0px);
    opacity: 1;
}
}

@keyframes slideButtom2 {

0% {
    transform: translateY(300px);
    opacity: 0;
}

100% {
    transform: translateX(0px);
    opacity: 1;
}
}

        @media (max-width: 1024px) {

